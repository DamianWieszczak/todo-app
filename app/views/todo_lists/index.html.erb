<div class="mx-auto text-center">
  <h1 class="mb-4 mx-auto">ToDo Lists</h1>

  <div class="container">
    <% @todo_lists.each do |todo_list| %>
      <div class="card text-white bg-info mb-3 mx-auto text-center" style="max-width: 18rem;">
        <div class="card-header"><%= todo_list.title %></div>
          <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text"><%= todo_list.description %></p>
          <div id="decoration">    
            <%= link_to "View", todo_list, class: "btn btn-sm btn-primary" %>
            <%= link_to 'Edit', edit_todo_list_path(todo_list), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Destroy', todo_list, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </div>
      </div>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to "New Todo List", new_todo_list_path, class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>

