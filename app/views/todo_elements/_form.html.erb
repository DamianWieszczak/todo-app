<div class="container mt-3">
  <div class="row justify-content-center">
    <%= form_for([@todo_list, @todo_list.todo_elements.build]) do |f| %>
      <div class="form-group row">
        <%= f.label :content, class: "col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :content, class: "form-control shadow rounded", placeholder: "New ToDo" %>
        </div> 
      </div>
        <div class="form-group justify-content-center mt-2 text-center col-10">
          <%= f.submit class: "btn btn-sm btn-outline-info btn-lg" %>
          <br>
          <div class="mt-2">
            <%= link_to 'Edit todo list', edit_todo_list_path(@todo_list), class: "badge badge-pill badge-warning" %> |
            <%= link_to 'Back', todo_lists_path, class: "badge badge-pill badge-info" %>
          </div>
        </div>
    <% end %>
  </div>
</div>